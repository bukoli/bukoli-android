<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bukoliGreyLight"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        style="@style/BukoliExampleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bukoli"
        android:textColor="@color/accentGrey" />

    <Button
        android:id="@+id/btBukoliPoint"
        style="@style/BukoliExampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default Select Point" />

    <Button
        android:id="@+id/btBukoliInfo"
        style="@style/BukoliExampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Default Info" />


    <!--Markafoni-->

    <TextView
        style="@style/BukoliExampleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example 1"
        android:textColor="@color/accentGrey" />

    <Button
        android:id="@+id/btExample1Point"
        style="@style/BukoliExampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Point with phone number" />

    <Button
        android:id="@+id/btExample1Info"
        style="@style/BukoliExampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Info" />

    <!--Markafoni-->

    <TextView
        style="@style/BukoliExampleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example 2"
        android:textColor="@color/accentGrey" />

    <Button
        android:id="@+id/btExample2Point"
        style="@style/BukoliExampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Point" />

    <Button
        android:id="@+id/btExample2Info"
        style="@style/BukoliExampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Info" />


</LinearLayout>
