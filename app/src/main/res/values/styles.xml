<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BukoliExampleButton" parent="Base.Widget.AppCompat.Button">

        <item name="android:drawableRight">@drawable/quantum_ic_play_arrow_grey600_36</item>
        <item name="android:background">@color/white_alpha</item>
        <item name="android:textColor">@color/accentGrey</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">20dp</item>

    </style>

    <style name="BukoliExampleTextView">

        <item name="android:background">@color/white_transparent</item>
        <item name="android:textColor">@color/accentGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


</resources>
